<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="pos_config_view_form" model="ir.ui.view">
            <field name="name">Inherit : Operating Unit Form</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="operating_unit_id"
                        groups="operating_unit.group_multi_operating_unit"/>
                </xpath>
            </field>
        </record>

        <record id="pos_config_view_tree" model="ir.ui.view">
            <field name="name">Inherit : Operating Unit Tree</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="operating_unit_id"
                        groups="operating_unit.group_multi_operating_unit"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
