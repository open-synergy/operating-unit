<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="ir_rule_account_cash_payment_allowed_operating_units" model="ir.rule">
            <field name="model_id" ref="account_voucher_bank_cash.model_account_cash_payment"/>
            <field name="domain_force">['|', ('operating_unit_id','=',False), ('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
            <field name="name">Cash Payment from allowed operating units</field>
            <field name="global" eval="True"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

        <record id="ir_rule_account_cash_payment_line_allowed_operating_units" model="ir.rule">
            <field name="model_id" ref="account_voucher_bank_cash.model_account_cash_payment_line"/>
            <field name="domain_force">['|', ('voucher_id.operating_unit_id','=',False), ('voucher_id.operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
