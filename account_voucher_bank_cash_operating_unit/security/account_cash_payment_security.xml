            <field name="global" eval="True"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

        <record id="ir_rule_account_cash_payment_line_tax_allowed_operating_units" model="ir.rule">
            <field name="model_id" ref="account_voucher_bank_cash.model_account_cash_payment_line_tax"/>
            <field name="domain_force">['|', ('voucher_line_id.voucher_id.operating_unit_id','=',False), ('voucher_line_id.voucher_id.operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
            <field name="name">Cash Payment lines tax from allowed operating units</field>
            <field name="global" eval="True"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>
    </data>
</openerp>
