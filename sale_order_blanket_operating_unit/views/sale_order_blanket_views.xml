<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="sale_order_blanket_view_form" model="ir.ui.view">
            <field name="name">sale.order.blanket.form.ou</field>
            <field name="model">sale.order.blanket</field>
            <field name="inherit_id" ref="sale_order_blanket.sale_order_blanket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fiscal_position_id']" position="after">
                    <field name="operating_unit_id"
                        groups="operating_unit.group_multi_operating_unit"/>
                </xpath>
            </field>
        </record>

        <record id="sale_order_blanket_view_tree" model="ir.ui.view">
            <field name="name">sale.order.blanket.tree.ou</field>
            <field name="model">sale.order.blanket</field>
            <field name="inherit_id" ref="sale_order_blanket.sale_order_blanket_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="operating_unit_id"
                        groups="operating_unit.group_multi_operating_unit"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
